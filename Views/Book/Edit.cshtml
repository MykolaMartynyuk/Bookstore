@using Bookstore.Models.BookWM;
@model BookEditWM;
@{
	ViewData["Title"] =Model.PageTitle;
}

<h3>Book</h3>

<form asp-action="Edit" method="post" asp-controller="Book" enctype="multipart/form-data">
	<input hidden type="number" value="@Model.Id" asp-for="Id" id="Id" />
	<div>
		<label class="form-label" for="title">
			Title
		</label>
		<input type="text" required asp-for="Title" class="form-control" id="title" />
	</div>
	<div>
		<label class="form-label" for="isnb13">
			ISNB-13
		</label>
		<input type="text" required asp-for="ISBN13" class="form-control" id="isnb13" />
	</div>
	<div>
		<label class="form-label" for="pages">
			Number of pages
		</label>
		<input type="number" required asp-for="ISBN13" class="form-control" id="pages" />
	</div>

	<div id="format d-inline">
		<label for="format" class="form-label">
			Format
		</label>
		<input class="form-check-input" type="radio" value="1" name="cover" asp-for="@Model.NewBook.Format"/>
		<label class="form-check-label" for="1">
			Hardcover
		</label>
		<input class="form-check-input" type="radio" value="2" name="cover" asp-for="@Model.NewBook.Format" />
		<lable for="2" class="form-check-label">
			Paperback
		</lable>
		<input class="form-check-input" type="radio" value="3" name="cover" asp-for="@Model.NewBook.Format" />
		<label class="form-check-label" for="3">
			E-book
		</label>
	</div>
	<div>
		<label for="price" class="form-label">
			Price
		</label>
		<input type="number" required asp-for="Price" class="form-control" id="price" />
	</div>
	<div>
		<label for="author" class="form-label">
			Author
		</label>
		<select required asp-for="Author" class="form-control" id="author" >
			@foreach ( var author in Model.Authors)
			{
				<option value="@author.Id">@author.FirstName @author.LastName</option>
			}
		</select>
	</div>
	<div>
		<label for="genre" class="form-label">
			Genre
		</label>
		<select asp-for="Genre" class="form-control" id="genre" required >
			@foreach( var genre in Model.Genres)
			{
				<option value="@genre.Id">@genre.Name</option>
			}
		</select>
	</div>
	<div>
		<label class="form-label" for="img">
			Cover image
		</label>
		<input  value="~\img\@Model.NewBook.ImageURL" type="file" required class="form-control" asp-for="FileToUpload" id="img" />
	</div>
	<div class="mt-2">
		<button type="submit" value="Create" class="btn btn-primary">
			Create
		</button>
	</div>
</form>