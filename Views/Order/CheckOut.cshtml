@using Bookstore.Models.OrderWM;
@model CheckoutWM
@{
    ViewData["Title"] = "Checkout";
}
<h1>Checkout</h1>
<p class="border-bottom">Overview</p>
<ul class="list-group">
    @if (Model != null)
    {
        @if (Model.ShoppingCart != null )
        {
            @foreach(var book in Model.ShoppingCart.Distinct())
            {
            <li class="list-group-item">@Model.ShoppingCart.Count(x => x == book) x @book.Title</li>
            }
        }
    }
</ul>

<p>Delivery Details</p>
<form asp-controller="Order" asp-action="CheckOut" method="post">
    <input hidden type="number"  asp-for="NewOrder.Id" id="Id" />
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" id="FirstName" class="form-control" required asp-for="NewOrder.FirstName">
    </div> 
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" id="LastName" required class="form-control"  asp-for="NewOrder.LastName">
    </div>
    <div class="form-group">
        <label for="Street">Street</label>
        <input type="text" class="form-control" id="Street"  required asp-for="NewOrder.Street">
    </div>
    <div class="form-group">
        <label for="Number">Number</label>
        <input type="number" class="form-control" id="Number"  required asp-for="NewOrder.Number">
    </div>
    <div class="form-group">
        <label for="Zip">Zip</label>
        <input type="text" class="form-control" id="Zip"  required asp-for="NewOrder.Zip">
    </div>
    <div class="form-group">
        <label for="City">City</label>
        <input type="text" class="form-control" id="City"  required asp-for="NewOrder.City">
    </div>
   
    <button type="submit" value="Create" class="btn btn-primary">Create</button>
</form>
